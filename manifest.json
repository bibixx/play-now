{
  "manifest_version": 3,
  "name": "PLAY NOW channels fixer",
  "version": "1.0.1",
  "description": "Brings all of the available channels to the PLAY NOW app in the browser",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["https://playnow.pl/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "channels-fixer@playnow.pl"
    }
  }
}
